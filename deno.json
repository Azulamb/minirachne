{
	"tasks": {
		"sample": "deno run --allow-read --allow-net --allow-env ./sample/server.ts",
		"clear": "deno cache -r ./mod.ts ./sample/server.ts",
		"check": "deno run --allow-run tools/release_checker.ts"
	},
	"lint": {
		"files": {
			"include": ["src/", "types.d.ts", "mod.ts", "version.ts", "tools/"]
		},
		"rules": {
		  "tags": ["recommended"],
		  "include": [],
		  "exclude": ["require-await"]
		}
	},
	"fmt": {
		"files": {
			"include": ["src/", "types.d.ts", "mod.ts", "version.ts", "tools/", "sample/"]
		},
		"options": {
			"useTabs": true,
			"indentWidth": 4,
			"lineWidth": 160,
			"singleQuote": true
		}
	}
}
